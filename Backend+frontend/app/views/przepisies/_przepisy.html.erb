

<div class="jumbotron">
  <h1 class="display-4"><%= przepisy.nazwa %></h1>
  <p class="lead">


    <% if przepisy.image.attached? %>
     <%= image_tag przepisy.image, style: "max-width: 400px; width: 100%; display: block;" %>
    <% end %>


    
  <p>
    <strong>Opis:</strong>
    <%= przepisy.opis %>
  </p>
